@page
@model WebApp.Pages.Estudiante.IndexEstudiante
@{
    ViewData["Title"] = "Estudiantes";
}

<h1>Lista de Estudiantes</h1>
<hr/>
<a asp-page="Create" class="btn btn-success float-end">Create</a>
<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.Estudiantes[0].CI)</th>
            <th>@Html.DisplayNameFor(model => model.Estudiantes[0].NOMBRE)</th>
            <th>@Html.DisplayNameFor(model => model.Estudiantes[0].DIRECCION)</th>
            <th>@Html.DisplayNameFor(model => model.Estudiantes[0].CARRERA)</th>
            <th>@Html.DisplayNameFor(model => model.Estudiantes[0].EDAD)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var estudiante in Model.Estudiantes)
        {
            <tr class="text-center">
                <td>@Html.DisplayFor(model => estudiante.CI)</td>
                <td>@Html.DisplayFor(model => estudiante.NOMBRE)</td>
                <td>@Html.DisplayFor(model => estudiante.DIRECCION)</td>
                <td>@Html.DisplayFor(model => estudiante.CARRERA)</td>
                <td>@Html.DisplayFor(model => estudiante.EDAD)</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@estudiante.IDLECTOR" class="btn btn-primary">Edit</a>
                    <a asp-page="./Detail" asp-route-id="@estudiante.IDLECTOR"  class="btn btn-success">Details</a>
                    <a asp-page="./Delete" asp-route-id="@estudiante.IDLECTOR" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>