@page
@model WebApp.Pages.Prestamo.CreatePrestamo
@{
    ViewData["Title"] = "Crear Nuevo Préstamo";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Prestamos.IDLECTOR"></label>
        <select asp-for="Prestamos.IDLECTOR" class="form-control">
            <option value="">Seleccione un Lector</option>
            @foreach (var lector in Model.Lectores)
            {
                <option value="@lector.Value">@lector.Text</option>
            }
        </select>
        <span asp-validation-for="Prestamos.IDLECTOR" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prestamos.IDLIBRO"></label>
        <select asp-for="Prestamos.IDLIBRO" class="form-control">
            <option value="">Seleccione un Libro</option>
            @foreach (var libro in Model.Libros)
            {
                <option value="@libro.Value">@libro.Text</option>
            }
        </select>
        <span asp-validation-for="Prestamos.IDLIBRO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prestamos.FECHAPRESTAMO"></label>
        <input asp-for="Prestamos.FECHAPRESTAMO" class="form-control" type="date"/>
        <span asp-validation-for="Prestamos.FECHAPRESTAMO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prestamos.FECHAENTREGA"></label>
        <input asp-for="Prestamos.FECHAENTREGA" class="form-control" type="date"/>
        <span asp-validation-for="Prestamos.FECHAENTREGA" class="text-danger"></span>
    </div>
<br>
    <div class="form-check">
    <input asp-for="Prestamos.DEVUELTO" class="form-check-input" type="checkbox"/>
    <label asp-for="Prestamos.DEVUELTO" class="form-check-label"></label>
    </div>
<br>
            <div class="form-group mt-2">
                <a asp-page="Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
</form>

